<% layout('/layouts/boilerplate') -%>
<div class="row">
    <div class="col-8 offset-2 mt-3">
        <h1>Login : </h1>
        <form method="POST" action="/login" 
            class="needs-validation" novalidate>
            <div class="mb-3 mt-3">
                <label for="username" class="form-label">username</label>
                <input type="text" id="username" name="username" 
                        class="form-control" placeholder="Enter username" required/>
                <div class="invalid-feedback">Enter valid username</div><br>
            </div>
            <div class="mb-3 mt-3">
               <label for="password" class="form-label">password</label>
               <input type="password" id="password" name="password" 
                       class="form-control" placeholder="Enter password" required/>
               <div class="invalid-feedback">Enter valid password!</div><br>
           </div>
        <button class="btn btn-outline-success mb-3">Login</button>
        </form>
    </div>
</div>
<script src="/js/script.js"></script>